{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Firebase Functions",
      "port": 9229,
      "restart": true,
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "chrome",
      "request": "launch",
      "name": "Launch React App",
      "url": "http://localhost:3000",
      "webRoot": "${workspaceFolder}/apps/client",
      "preLaunchTask": "Start React App"
    }
  ]
}
